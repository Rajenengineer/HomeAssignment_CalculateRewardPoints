{
  "include": ["./src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                     
    "outDir": "./out",                        
    "rootDir": "./src",                      
    "strict": false,                          
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  }
}
